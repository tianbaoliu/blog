.reco-bgm-panel
  height 0
  width 0
  position relative
  .reco-bgm-box
    position fixed
    display flex
    height 66px
    background-color rgba(255, 255, 255, 1)
    // background-color var(--default-color-7)
    // border-radius 50px
    border 1px solid #e9e9e9
    .reco-bgm-cover
      background-size contain
      z-index 3
      float left
      height 66px
      width 66px
      border-radius 66px
      // box-shadow 0 0 10px 1px #616161
      .mini-operation
        height 66px
        // border-radius 66px
        width 66px
        display flex
        background-color rgba(158, 158, 158, 0.3)
        justify-content center
        align-items center
        i
          color #fff
          cursor pointer
          font-size 20px
      .falut-message
        height 66px
        // border-radius 66px
        width 66px
        display flex
        background-color rgba(158, 158, 158, 0.3)
        justify-content center
        align-items center
        color #ffffff
    .reco-bgm-info
      float left
      z-index 2
      height 66px
      padding 0 20px
      display flex
      flex-direction column
      justify-content center
      .info-box
        height 21px
        display flex
        align-items center
        letter-spacing 1px
        justify-content space-between
        i
          color #999
          font-size 21px
        .music
          font-size 18px
        .sp
          display: inline-block
          margin-left: 5px
          font-size: 12px
          color: #999
      .reco-bgm-progress
        height 14px
        width 100%
        display flex
        align-items center
        .progress-bar
          height 3px
          width 100%
          background #cdcdcd
          border-radius 5px
          position relative
          cursor pointer
          .bar
            position absolute
            left 0
            top 0
            height 3px
            width 0
            background-color cornflowerblue;
            border-radius 5px
      .reco-bgm-operation
        display flex
        justify-content flex-start
        align-items center
        height 24px
        i
          margin-right 5px
          color #999
          cursor pointer
          padding 0 4px
        .last
          font-size 14px
        .next
          font-size 14px
        .pause
          font-size 15px
        .play
          font-size 15px
        .volume
          font-size 18px
        .mute
          font-size 18px
        .volume-bar
          height 3px
          width 57px
          background #cdcdcd
          border-radius 5px
          position relative
          cursor pointer
          .bar
            position absolute
            left 0
            top 0
            height 3px
            width 0
            background-color #999
            border-radius 5px
    .reco-bgm-left-box
      position: absolute
      top -1px
      right -16px
      height 100%
      font-size 22px
      display flex
      flex-direction column
      justify-content center
      cursor pointer
      background #e6e6e6
      border-top 1px solid #e9e9e9
      border-bottom 1px solid #e9e9e9
      i
        color #999
        height: 100%;
        display: flex;
        align-items: center;
  .reco-float-box
    width 40px
    height 40px
    background-color #999
    position fixed
    bottom 200px
    display flex
    justify-content center
    align-items center
    cursor pointer
    box-shadow var(--box-shadow)
    img
      width 30px
      height 30px
      border-radius 50%
